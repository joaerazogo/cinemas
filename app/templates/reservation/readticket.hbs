<form class="" action="" method="post">
  <div class="center">
    {{#if numberTicket}}
        No existen reservas actualmente
    {{else}}
    {{/if}}
  </div>
  <div class="left col s1">
    <h6>Consultar reserva:</h6>
  </div>
  <div class="col s1">
    {{#power-select
      options=model.ticket
      searchField="date"
      selected=selectedTicket
      allowClear=true
      noMatchesMessage="No se han encontrado coincidencias con esta fecha"
      onchange=(action "onChangeDate")
      as |ticket|}}
        {{ticket.date}}
    {{/power-select}}
  </div>
  <br/>
  <br/>
  <div class="center">
    <div class="row">
      {{#link-to 'reservation.queryticket' selectedTicket.date}}
        <button class="btn waves-effect waves-light" type="submit" name="action" {{action 'tryRead'}}>Consultar
          <i class="material-icons right">arrow_forward</i>
        </button>
      {{/link-to}}
      {{#link-to 'index'}}
        <button class="btn waves-effect waves-light" type="submit" name="action" >Atr√°s
          <i class="material-icons right">arrow_back</i>
        </button>
      {{/link-to}}
      <div class="">
          {{#if showErrorMessage}}Por favor seleccione una reserva{{else}}{{/if}}
      </div>
    </div>
  </div>
</form>
{{outlet}}
