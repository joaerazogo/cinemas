<div class="center">
  <h1><strong><i>DATOS GENERALES DEL CLIENTE</i></strong></h1>
</div>
<div class="center">
  <h1>Actualice los datos del cliente</h1>
</div>
<div class="">
  <div class="row">
   <form class="col s12" >
     <div class="row">
       <div class="input-field col s6">
         {{input id=name value=name type="text" placeholder="enter name" required="true"}}
         <label for="name">Name:</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         {{input id=last_name value=last_name type="text" placeholder="last name" required="true"}}
         <label for="name">Last Name:</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         {{input id=address value=address type="text" placeholder="Address" required="true"}}
         <label for="direccion">Address:</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         {{input id=telephone value=telephone type="text" placeholder="telephone" required="true"}}
         <label for="name">Telephone:</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         {{input id=email value=email type="text" placeholder="email" required="true"}}
         <label for="email">Email</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         {{input id=password value=password type="password" placeholder="password" required="true"}}
         <label for="password">Password</label>
       </div>
     </div>
   </form>
 </div>
 <h1>{{model.email}}</h1>
 <div class="center">
   <div class="row">
    {{#link-to 'client.editclient.messageclient'}}
      <button class="btn waves-effect waves-light" type="submit" name="action" {{action 'updateClient' model.email}}>Actualizar cliente
        <i class="material-icons right">send</i>
      </button>
     {{/link-to}}
    {{#link-to 'index'}}
      <button class="btn waves-effect waves-light" type="submit" name="action">Cancelar
        <i class="material-icons right">arrow_back</i>
      </button>
    {{/link-to}}
   </div>
 </div>
</div>
{{outlet}}
